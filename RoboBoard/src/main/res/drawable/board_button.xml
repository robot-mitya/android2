<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:width="@dimen/board_button_width" android:height="@dimen/board_button_height" />
            <solid android:color="@color/board_button_background_pressed_color" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="oval">
            <size android:width="@dimen/board_button_width" android:height="@dimen/board_button_height" />
            <solid android:color="@color/board_button_background_pressed_color" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="@dimen/board_button_width" android:height="@dimen/board_button_height" />
            <solid android:color="@color/board_button_background_color" />
            <stroke android:width="4dp" android:color="@color/board_button_checked_stroke_color" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size android:width="@dimen/board_button_width" android:height="@dimen/board_button_height" />
            <solid android:color="@color/board_button_background_color" />
        </shape>
    </item>

</selector>